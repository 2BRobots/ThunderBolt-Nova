program Servo

' Declarations section 
dim i as byte


sub procedure servo (dim x as byte)
portc.5 = 1
delay_us (600)
for i = 0 to x step 1
delay_us (9)
next i
portc.5 = 0
end sub

dim va as byte

main:
'   Main program 
org 0x1000
orgall (0x1000)

trisc.5 = 0
loop:
for va = 0 to 180 step 5
servo(va)
delay_ms(20)
next va

for va = 180 to 0 step -1
servo(va)
delay_ms(20)
next va
goto loop

end.